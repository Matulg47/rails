<head>

<link rel="stylesheet" href="/assets/estilos2.css">

    <title>Pedidos</title>
    <script src="https://kit.fontawesome.com/039d04bc54.js" crossorigin="anonymous"></script>
    


</head>
<body class="fadein">
<% if flash[:alert] %>
  <div class="flash-alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_for(@pedido) do |f| %>
    <div class="contenedor">  
    <h1 style="text-align: center; font-family: 'Bodoni Moda', serif; color: #990033; padding-top: 10px;margin-bottom:0; font-weight: 600; font-size: 36px;">Seleccione lo que desee llevar</h1>
   
        <section class="galeria" >
            <figura>
                <%= image_tag "tortas.jpeg", title: "torta", class: "logo"%>         
                <figcaption2> 
                    <h3 class="display-4" style="font-family: 'Dancing Script', cursive;font-size: 25px; text-shadow: 2px 2px 10px white;">
                    TORTAS</h3>
                </figcaption2>      
                    <%= f.submit "", name: "mas_tortas", class: "boton2"%>        
            </figura>
            <figura>
                <%= image_tag "tartas.jpeg", title: "tarta", class: "logo"%>       
                <figcaption2> <h3 class="display-4" style="font-family: 'Dancing Script', cursive; font-size: 25px; text-shadow: 2px 2px 10px white;">TARTAS</h3>
                </figcaption2> 
                   <%= f.submit "", name: "mas_tartas", class: "boton2" %>
            </figura>
            <figura>
                <%= image_tag "cookies.webp", title: "macaroon", class: "logo"%>       
                <figcaption2> <h3 class="display-4" style="font-family: 'Dancing Script', cursive; font-size: 25px; text-shadow: 2px 2px 10px white;">COOKIES</h3>
                </figcaption2> 
                    
                        <%= f.submit "", name: "mas_mac", class: "boton2" %>
                   
            </figura>
            <figura>
                    <%= image_tag "seccion_budines.jpg", title: "chipa", class: "logo"%>
                    <figcaption2> 
                    <h3 class="display-4" style="font-family: 'Dancing Script', cursive;font-size: 25px; text-shadow: 2px 2px 10px white;">
                    BUDINES, BROWNIES Y STREUSELS</h3>
                </figcaption2> 
                        <%= f.submit "", name: "mas_otros", class: "boton2" %>
                    
                </figura>
                <figura>
                <%= image_tag "desayuno.jpeg", title: "desayuno", class: "logo"%>
                <figcaption2> <h3 class="display-4" style="font-family: 'Dancing Script', cursive;font-size: 25px; text-shadow: 2px 2px 10px white;">DESAYUNOS</h3>
                </figcaption2> 
                    <%= f.submit "", name: "mas_desa", class: "boton2" %>
               
            </figura>
            </section>
            <%= render 'shared/contacto' %>
    </div>
    <% if params[:pedido_id] != "-1" %>
        <%= render 'shared/changuito' %>
    <%end%>
    
<% end %>
</body>